{
  "name": "six-cities",
  "version": "5.0.0",
  "description": "Проект «Шесть городов» от HTML Academy",
  "keywords": [
    "rest",
    "api",
    "node.js"
  ],
  "main": "main.js",
  "scripts": {
    "start": "npm run build && node ./dist/main.rest.js",
    "start:dev": "npm run build && node ./dist/main.rest.js | pino-pretty --colorize --translateTime SYS:standard",
    "build": "npm run clean && npm run compile",
    "lint": "eslint src/ --ext .ts",
    "compile": "tsc -p tsconfig.json",
    "clean": "rimraf dist",
    "ts": "node --loader ts-node/esm --trace-uncaught --trace-warnings",
    "cli": "npm run build && node ./dist/main.cli.js",
    "mock:server": "json-server ./mocks/mock-server-data.json --port 3123"
  },
  "devDependencies": {
    "@stylistic/eslint-plugin": "^3.1.0",
    "@types/node": "18.17.17",
    "@typescript-eslint/eslint-plugin": "6.7.0",
    "@typescript-eslint/parser": "6.7.0",
    "eslint": "8.49.0",
    "eslint-config-htmlacademy": "9.1.1",
    "pino-pretty": "^10.2.0",
    "rimraf": "5.0.1",
    "ts-node": "10.9.1",
    "typescript": "5.2.2"
  },
  "type": "module",
  "engines": {
    "node": "^18.0.0",
    "npm": ">=8"
  },
  "dependencies": {
    "@types/convict": "^6.1.4",
    "@types/convict-format-with-validator": "^6.0.3",
    "chalk": "^5.6.2",
    "convict": "^6.2.4",
    "convict-format-with-validator": "^6.2.0",
    "dayjs": "^1.11.18",
    "dotenv": "^16.3.1",
    "got": "^14.4.9",
    "inversify": "^6.0.1",
    "json-server": "^1.0.0-beta.3",
    "pino": "^8.15.1",
    "reflect-metadata": "^0.1.13",
    "tslib": "^2.8.1"
  }
}
